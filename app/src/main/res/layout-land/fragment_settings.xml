<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="fragments.SettingsFragment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="32dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/player_1"
            android:textAlignment="center"
            android:textColor="#00FF37"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/player_2"
            android:textAlignment="center"
            android:textColor="#00FF37"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="24dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edit_text_first_player"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="@string/player_1"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textSize="24sp"
            android:autofillHints="" />

        <EditText
            android:id="@+id/edit_text_second_player"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="@string/player_2"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textSize="24sp"
            android:autofillHints="" />
    </LinearLayout>

    <Switch
        android:id="@+id/switch_point_view"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginTop="48dp"
        android:layout_weight="1"
        android:text="@string/show_points"
        android:textColor="#0AD1F4"
        android:textSize="24sp" />

    <Button
        android:id="@+id/button_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginTop="48dp"
        android:text="@string/save"
        android:textSize="20sp" />
</LinearLayout>