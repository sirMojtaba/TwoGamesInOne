<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tic_tac_toe_gradient"
    android:orientation="vertical"
    tools:context=".controller.fragments.TicTacToeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_tic_toc_toe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/game_tic_tac_tow"
            android:textAlignment="center"
            android:textSize="24sp"
            tools:text=" " />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_first_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textColor="#00CDFF"
                android:textSize="24sp"
                tools:text="first" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/point"
                android:textSize="36sp" />

            <TextView
                android:id="@+id/textView_second_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textColor="#00CDFF"
                android:textSize="24sp"
                tools:text="second" />
        </LinearLayout>

    </LinearLayout>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/button_one"
                android:layout_width="104dp"
                android:layout_height="104dp"
                android:textSize="40sp" />

            <Button
                android:id="@+id/button_two"
                android:layout_width="104dp"
                android:layout_height="104dp"
                android:textSize="40sp" />

            <Button
                android:id="@+id/button_three"
                android:layout_width="104dp"
                android:layout_height="104dp"
                android:textSize="40sp" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/button_four"
                android:layout_width="104dp"
                android:layout_height="104dp"
                android:textSize="40sp" />

            <Button
                android:id="@+id/button_five"
                android:layout_width="104dp"
                android:layout_height="104dp"
                android:textSize="40sp" />

            <Button
                android:id="@+id/button_six"
                android:layout_width="104dp"
                android:layout_height="104dp"
                android:textSize="40sp" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/button_seven"
                android:layout_width="104dp"
                android:layout_height="104dp"
                android:textSize="40sp" />

            <Button
                android:id="@+id/button_eight"
                android:layout_width="104dp"
                android:layout_height="104dp"
                android:textSize="40sp" />

            <Button
                android:id="@+id/button_nine"
                android:layout_width="104dp"
                android:layout_height="104dp"
                android:textSize="40sp" />
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_try_again"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:shadowColor="#6F778F"
            android:textAlignment="center"
            android:textColor="#00FF37"
            android:textSize="18sp"
            tools:text="try again" />

    </LinearLayout>
</LinearLayout>